<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QMK"
    android:background="#F1CB0C">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/tuybn4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="FORGOT PASSWORD"
            android:fontFamily="@font/s"
            android:textColor="#FFFACD"
            android:textSize="30dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/s"
            android:layout_below="@+id/textView17"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Question"
            android:textStyle="bold|italic"
            android:textColor="#FFFACD" />

        <Spinner
            android:id="@+id/spn_ask"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:fontFamily="@font/s"
            android:layout_below="@+id/textView18"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textStyle="italic|bold"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:outlineAmbientShadowColor="#2b0000"
            android:outlineSpotShadowColor="#2b0000"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView19"
            android:textStyle="italic|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/s"
            android:layout_below="@+id/spn_ask"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="Answer"
            android:textColor="#FFFACD" />

        <EditText
            android:textStyle="bold|italic"
            android:id="@+id/edt_ctl"
            android:layout_width="342dp"
            android:layout_height="138dp"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/s"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="Please enter your answer"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_thoatt"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:fontFamily="@font/s"
            android:textStyle="italic|bold"
            android:layout_below="@+id/edt_mkmoi"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/btn_login"
            android:text="Exit"
            android:textColor="#2b0000" />

        <Button
            android:id="@+id/btn_sendd"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@+id/edt_mkmoi"
            android:layout_marginStart="56dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/s"
            android:textStyle="italic|bold"
            android:layout_toEndOf="@+id/btn_thoatt"
            android:background="@drawable/btn_login"
            android:text="Send"
            android:textColor="#2b0000" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:fontFamily="@font/s"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="125dp"
            app:srcCompat="@drawable/us" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_ctl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/s"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textStyle="italic|bold"
            android:textColor="#FFFACD" />

        <EditText
            android:id="@+id/edt_mkmoi"
            android:layout_width="342dp"
            android:fontFamily="@font/s"
            android:layout_height="48dp"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:textStyle="italic|bold"
            android:background="@drawable/tuybiennut"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Password...."
            android:textColor="#2b0000"
            android:textColorHint="#2b0000" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>