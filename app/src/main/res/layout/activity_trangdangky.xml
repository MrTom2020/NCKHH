<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.trangdangky"
        android:background="@drawable/tuybiennut3">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/tuybn4">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="354dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="114dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="ĐĂNG KÝ TÀI KHOẢN"
                android:textAlignment="center"
                android:textColor="#FFFACD"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/edtten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="19dp"
                android:ems="10"
                android:hint="Nhập Email đăng nhập"
                android:inputType="textEmailSubject"
                android:minHeight="48dp"
                android:textColor="#FFFACD"
                android:textColorHint="#FFFACD" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="-129dp"
                android:text="Tên"
                android:textColor="#FFFACD" />

            <EditText
                android:id="@+id/edtmk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtten"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="19dp"
                android:ems="10"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#FFFACD"
                android:textColorHint="#FFFACD" />

            <EditText
                android:id="@+id/edtdiachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtmk"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="19dp"
                android:ems="10"
                android:hint="Xin hãy  chọn địa chỉ"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#FFFACD"
                android:textColorHint="#FFFACD" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_choose_Address"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="14dp"
                android:ems="10"
                android:hint="Nhập ngày sinh"
                android:inputType="date"
                android:minHeight="48dp"
                android:textColor="#FFFACD"
                android:textColorHint="#FFFACD" />

            <Button
                android:id="@+id/btnthoat"
                android:layout_width="138dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtma"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/btn_login"
                android:text="Thoát"
                android:textColor="#2b0000" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="-219dp"
                android:text="Địa chỉ"
                android:textColor="#FFFACD" />

            <Button
                android:id="@+id/btndd"
                android:layout_width="143dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtma"
                android:layout_marginStart="31dp"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/btnthoat"
                android:background="@drawable/btn_login"
                android:text="Đăng ký"
                android:textColor="#2b0000" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="131dp"
                android:text="Ngày sinh"
                android:textColor="#FFFACD" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="-297dp"
                android:text="Mật khẩu"
                android:textColor="#FFFACD" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="148dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="114dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="114dp"
                android:background="@drawable/us" />

            <TextView
                android:id="@+id/txtsdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="65dp"
                android:text="Số điện thoại"
                android:textColor="#FFFACD" />

            <EditText
                android:id="@+id/edtsdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextDate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="19dp"
                android:ems="10"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="#FFFACD"
                android:textColorHint="#FFFACD" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtsdt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="65dp"
                android:text="Chuỗi khóa"
                android:textColor="#FFFACD" />

            <TextView
                android:id="@+id/txtma"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtsdt"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="19dp"
                android:text="TextView"
                android:textColor="#FFFACD" />

            <Button
                android:id="@+id/btn_choose_Address"
                android:layout_width="212dp"
                android:layout_height="48dp"
                android:layout_below="@+id/edtdiachi"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/btn_login"
                android:text="Chọn địa chỉ"
                android:textColor="#2b0000" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>