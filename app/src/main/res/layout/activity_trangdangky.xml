<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trangdangky"
    android:background="@drawable/tuybiennut3">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="696dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/tuybn4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="354dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="REGISTER AN ACCOUNT"
            android:textAlignment="center"
            android:textColor="#F1CB0C"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/edtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="#F1CB0C"
            android:ems="10"
            android:hint="Email login...."
            android:inputType="textEmailSubject"
            android:minHeight="48dp"
            android:textColor="#2b0000"
            android:textColorHint="#2b0000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="-129dp"
            android:text="User name"
            android:textColor="#F1CB0C" />

        <EditText
            android:id="@+id/edtmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtten"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="#F1CB0C"
            android:ems="10"
            android:hint="Login Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#2b0000"
            android:textColorHint="#2b0000" />

        <EditText
            android:id="@+id/edtdiachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtmk"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="#F1CB0C"
            android:ems="10"
            android:hint="Address Information"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#2b0000"
            android:textColorHint="#2b0000" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtdiachi"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="#F1CB0C"
            android:ems="10"
            android:hint="Enter your Date of Birth"
            android:inputType="date"
            android:minHeight="48dp"
            android:textColor="#2b0000"
            android:textColorHint="#2b0000" />

        <Button
            android:id="@+id/btnthoat"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_login"
            android:text="Exit"
            android:textColor="#2b0000"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="-219dp"
            android:text="Address"
            android:textColor="#F1CB0C" />

        <Button
            android:id="@+id/btndd"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDate"
            android:layout_marginStart="19dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/btnthoat"
            android:background="@drawable/btn_login"
            android:text="Agree"
            android:textColor="#2b0000"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="50dp"
            android:text="Date of birth"
            android:textColor="#F1CB0C" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="-297dp"
            android:text="Password"
            android:textColor="#F1CB0C" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="161dp"
            android:layout_height="121dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="89dp"
            app:srcCompat="@drawable/us" />
    </RelativeLayout>
</RelativeLayout>
